<%= form_with(model: provider) do |form| %>
  <% if provider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(provider.errors.count, "error") %> prohibited this provider from being saved:</h2>

      <ul>
        <% provider.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= provider.name %>
  </div>

  <% unless provider.default? %>
    <div class="field">
      <%= form.label :active %>
      <%= form.check_box :active %>
    </div>
  <% end %>

  <% if provider.api_token_required? %>
    <div class="field">
      <%= form.label :api_token %>
      <%= form.text_field :api_token %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
